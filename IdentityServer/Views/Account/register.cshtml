@model RegisterViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<partial name="_ValidationSummary"/>
<div class="row">
    <div class="col-sm-6">
        <form asp-route="Register">
            <input type="hidden" asp-for="ReturnUrl"/>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input class="form-control" placeholder="Username" asp-for="UserName" autofocus/>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input class="form-control" placeholder="Username" asp-for="Email"/>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input class="form-control" placeholder="Password" asp-for="Password"/>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirmation"></label>
                <input class="form-control" placeholder="PasswordConfirmation" asp-for="PasswordConfirmation"/>
            </div>
            <button class="btn btn-primary" name="button" value="Register">Register</button>
        </form>
    </div>
</div>
